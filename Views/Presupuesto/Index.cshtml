@{
    ViewData["Title"] = "Presupuesto";
}


@model List<espacioPresupuestos.Presupuesto> 

<div class="text-center">
    <h1 class="display-4">Listado de presupuesto</h1>
</div>
<table class="table table-primary table-striped">
    <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre destinatario</th>
      <th scope="col">Fecha de creaci√≥n</th>
      <th scope="col">Monto total</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    using espacioPresupuestos;
    @foreach(var presupuesto in Model)
    {
        <tr>
            <th scope="row">@presupuesto.IdPresupuesto</th>
            <td>@presupuesto.NombreDestinatario</td>
            <td>@presupuesto.FechaCreacion</td>
            <td>$@presupuesto.MontoPresupuestoConIVA()</td>
            @* <td><button type="button" class="btn btn-primary"><a class="nav-link text-light" asp-area="" asp-controller="Producto" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto">Modificar</a></button></td>
            <td><button type="button" class="btn btn-danger"><a class="nav-link text-light" asp-area="" asp-controller="Producto" asp-action="EliminarProducto" asp-route-id="@producto.IdProducto">Eliminar</a></button></td> *@
        </tr>
    }
  </tbody>
</table>
<div class="text-center">
    <button type="button" class="btn btn-success"><a   class="nav-link text-light" asp-area="" asp-controller="Presupuesto" asp-action="CrearPresupuesto">Agregar presupuesto a la lista</a></button>
</div>